<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
    <name>System - Donorwiz Facebook Open Graph</name>
    <author>Donorwiz</author>
    <creationDate>October 2014</creationDate>
    <copyright>Copyright (C) 2014  Donorwiz.</copyright>
    <license>GNU General Public License version 2 or later.</license>
    <authorEmail>info@donorwiz.com</authorEmail>
    <authorUrl>www.donorwiz.com</authorUrl>
    <version>1.0.0</version>
    <description></description>
 
    <files>
        <filename plugin="donorwizfbopengraph">donorwizfbopengraph.php</filename>
        <filename>index.html</filename>
    </files>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field type="spacer" name="general_spacer" label="General parameters" />
				<field name="description" type="text" default="" label="Description" />
				<field name="image" type="media" default="" label="Image" />
				
				<field type="spacer" name="facebook_spacer" label="Facebook parameters" />
				<field name="og_site_name" type="text" default="" label="Facebook Open Graph Site Name" />
				<field name="fb_app_id" type="text" default="" label="Facebook Open Graph Application ID" />
				<field name="og_type" type="text" default="" label="Facebook Open Graph Type" />
				
				<field type="spacer" name="twitter_spacer" label="Twitter parameters" />
				<field name="twt_type" type="text" default="" label="Twitter Card Type" />
				<field name="twt_site" type="text" default="" label="Twitter Card Site (with @)" />
			</fieldset>
		</fields>
	</config>
</extension>